<div class="modal-dialog modal-lg">
	<div class="modal-content">
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal" aria-label="close"><span aria-hidden="true">&times;</span></button>
			<h3 class="modal-title">Contact us</h3>
		</div>
		
		<%= simple_form_for :thank_you, :url => static_thank_you_path, remote: true do |f| %>
			<div class="modal-body">
				<div id="flash-contact">
					<%= render 'flash_contact' %>
				</div>
				<p>Please fill in all the inputs</p>


				<%= f.input :name, label: false, input_html: { placeholder: 'Your name', required: true } %>
				<%= f.input :email, required: true, label: false, input_html: { placeholder: 'Your email' } %>
				<%= f.input :message, required: true, label: false, as: :text, input_html: { placeholder: 'Your message', rows: '5' } %>

			</div>
			<div class="modal-footer">
				<%= f.button :submit, "Send", class: "btn btn-success" %>
				<%= link_to "Cancel", '#', class: "btn btn-danger", data: { dismiss: "modal" } %>
			</div>
		<% end %>
		


	</div>
</div>