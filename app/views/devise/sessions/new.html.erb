<div class="row">
	<div class="col-md-6 offset-md-3 p-2 greenbox">
		<div class="row py-2">
			<div class="col-lg-12">
				<div class="btn-group float-xs-right" role="group">
					<%= link_to 'Sign up', new_user_registration_path, class: "btn btn-secondary btn-lg" %>
					<%= link_to 'Log in', new_user_session_path, class: "btn btn-secondary btn-lg active" %>
				</div>
			</div>
		</div>

		<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), defaults: { input_html: { class: "form-control form-control-lg" } }) do |f| %>
		<%= f.error_notification %>
	  	<div class="form-inputs">
		    <%= f.input :email, label: false, placeholder: "Email", required: true, autofocus: true %>
		    <%= f.input :password, label: false, placeholder: "Password", required: false %>
		    <div class="form-check-inline">
		    <%= f.input :remember_me, label: false, inline_label: true, label_html: { class: "form-check-label" }, input_html: { class: "form-check-input" }, as: :boolean if devise_mapping.rememberable? %>
		    </div>
	  	</div>

	  	<div class="form-actions mb-2">
	    	<%= f.button :submit, "Log in", class: "btn btn-success btn-lg" %>
	  	</div>
		<% end %>
		<%= link_to "Forgot your password?", new_password_path(resource_name), class: "lead" %>
	</div>
</div>


