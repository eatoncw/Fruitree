<div class="row">
	<div class="col-md-6 offset-md-3 p-2 greenbox">
		<div class="row py-2">
			<div class="col-lg-12">
				<div class="btn-group float-xs-right" role="group">
					<%= link_to 'Sign up', new_user_registration_path, class: "btn btn-secondary btn-lg active" %>
					<%= link_to 'Log in', new_user_session_path, class: "btn btn-secondary btn-lg" %>
				</div>
			</div>
		</div>

			<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), defaults: { input_html: { class: "form-control form-control-lg" } }) do |f| %>
			<%= f.error_notification %>

			<div class="form-inputs">
				<%= f.input :first_name, label: false, required: true, autofocus: true, placeholder: "First name" %>
				<%= f.input :last_name, label: false, required: true, autofocus: true, placeholder: "Last name" %>
				<%= f.input :nickname, label: false, required: true, autofocus: true, placeholder: "Nickname" %>
				<%= f.input :email, label: false, required: true, autofocus: true, placeholder: "Email address" %>
				<%= f.input :password, label: false, required: true, placeholder: "Choose a password", hint_html: { class: "small pl-2" }, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
				<%= f.input :password_confirmation, label: false, placeholder: "Confirm your password",required: true %>
			</div>
			<div class="form-actions py-1">
				<%= f.button :submit, "Sign up", class: "btn btn-success btn-lg" %>
			</div>
		<% end %>
	</div>
	</div>

