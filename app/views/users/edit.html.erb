<h2>Edit user details</h2>

<%= simple_form_for @user do |f| %>
	
	<%= f.input :email %>
	<%= f.input :first_name %>
	<%= f.input :last_name %>
	<%= f.input :nickname %>

	<%= f.input :password, autocomplete: "off", required: false %>
	<%= f.input :password_confirmation, required: false %>
	
	<%= f.button :submit, "Update user information", class: "btn btn-secondary btn-lg" %>
 
<% end %>

<%= link_to "Cancel changes", :back, class: "btn btn-secondary my-3" %>

<h3 class="my-1">Delete user</h3>
<%= link_to "Delete user", @user, method: :delete, data: { confirm: 'Are you sure you want to delete this user' }, class: "btn btn-danger" %>